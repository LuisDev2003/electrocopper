{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ES2015",
    "rootDir": "./scripts",
    "baseUrl": "./",
    "sourceMap": true,
    "outDir": "./scripts",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "verbatimModuleSyntax": true
  },
  "include": ["./scripts/**/*"],
  "exclude": ["node_modules", "./scripts/**/*.type.ts"]
}
