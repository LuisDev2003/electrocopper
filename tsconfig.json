{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ES2022",
    "rootDir": "./ts",
    "baseUrl": "./",
    "sourceMap": true,
    "outDir": "./scripts",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "verbatimModuleSyntax": true
  },
  "include": ["./ts/**/*"],
  "exclude": ["node_modules", "./ts/**/*.type.ts"]
}
